                        <div class="col-6 col-sm-4 form-div row"  nombre>
                            <label id="label nombre" class="col-12 " for="nombre">Nombre</label>
                            <input class="col-10" type="text" name="nombre" placeholder="Nombre">
                           
                        </div>

                        <div class="col-6 col-sm-5 form-div row" >
                            <label id="label apellido" class="col-12" for="apellido">Apellido</label>
