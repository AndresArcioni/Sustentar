<%- include('./partials/head') %>
<body>
    
    
    <%- include('./partials/Header') %>
    
    <div id="contenedor-detalle-producto" class="container-fluid">
        
        <h4>Detalle del producto <%= producto.nombreProducto %></h4>
        
        
        
        
        
        <div class="row">
            
            <div id="carouselProductIndicators" class="carousel slide" data-ride="carousel">
                
                <div class="carousel-inner">
                    <div class="carousel-item active">
                        <img class="d-block w-100" src="/images/default-image.png" alt="First slide">
                    </div>
                    <div class="carousel-item">
                        <img class="d-block w-100" src="/images/default-image.png" alt="Second slide">
                    </div>
                    <div class="carousel-item">
                        <img class="d-block w-100" src="/images/default-image.png" alt="Third slide">
                    </div>
                </div>
                <ol class="carousel-indicators">
                    <img data-target="#carouselProductIndicators" data-slide-to="0" class="active" src="/images/default-image.png" alt="">
                    <img data-target="#carouselProductIndicators" data-slide-to="1" class="active" src="/images/default-image.png" alt="">
                    <img data-target="#carouselProductIndicators" data-slide-to="2" class="active" src="/images/default-image.png" alt="">
                </ol>
                <a class="carousel-control-prev" href="#carouselProductIndicators" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#carouselProductIndicators" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>
            
            <div class="col-8 col-sm-9 product-detail-container">
                
                <div>
                    <h3 class="product-price">Precio</h3>
                    <h6 class="product-discount">Desc</h6>
                    <p class="product-description">Lorem ipsum dolor sit amet consectetur adipisicing elit. Et, inventore.</p>
                </div>
                <form action="/product/detail/1" method="POST" class="row">
                    <div class="col-12">
                        <label for="">Cantidad</label>
                        <select action="/product/detail/1" method="POST" name="cantidad" id="cantidad" class="inputStyle">
                            <option value="1">1</option>
                            <option value="2">2</option>
                            <option value="3">3</option>
                            <option value="4">4</option>
                            <option value="5">5</option>
                        </select>
                    </div>
                    <button name="botonAgregar" id="aCarrito" value="idProducto" method="POST" type="submit" class="botonStyle botonFiltro col-12 col-sm-4">Agregar al carrito</button>
                    <button formaction="/carrito" name="botonComprar" value="idProducto" method="POST" type="submit" class="botonStyle botonFiltro continuar col-12 col-sm-4">Comprar</button>
                </form>
                <div class="row">
                    <button type="button" class="ml-3 mt-4 col-12 boton-editar botonStyle"><a href="/product/editarProducto/<%=producto.id%>">Editar Producto</a></button>
                    <form class="col-12 row" action="/product/borrar/<%=producto.id%>?_method=DELETE" method="POST">
                        <button type="submit" class="ml-3 mt-4 col-12 boton-editar botonStyle">Eliminar Producto</button>
                    </form>
                </div>
            </div> 
            
        </div>
        
        
    </div>
    
    <%- include('./partials/footer') %>
    
    
</body>