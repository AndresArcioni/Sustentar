<!DOCTYPE html>
<html lang="en">

    <%- include('./partials/Head') %>
    <body>
        <%- include('./partials/Header') %>
        <div class="container-fluid">
            
            <div class="busquedaContainer">
                <form action="" method="GET" class="busqueda row">
                    <input class="inputDeBusqueda inputStyle col-10" placeholder="Escriba el producto que desea buscar" type="text" id="busquedaAvanzada" name="busquedaAvanzada">
                </form>
            
                <nav class="mb-2 phoneFilter">
                    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#filter">
                        <i class="fas fa-filter"></i>Filtrar
                    </button>
                    
                    <div class="collapse" id="filter">
                        <h4><label for="">Categoría</label></h4>
                        <p class="checkboxFilter"><input type="checkbox" name="categoria" value="decoracion">Decoración</p>
                        <p class="checkboxFilter"><input type="checkbox" name="categoria" value="cocina">Cocina</p>
                        <p class="checkboxFilter"><input type="checkbox" name="categoria" value="baño">Baño</p>
                        <p class="checkboxFilter"><input type="checkbox" name="categoria" value="otros">Otros</p>

                    
                        <h4>Precio</h4>
                        <input class="col-5 minMax inputStyle" placeholder="Minimo" type="text" id="min" name="min">
                        <input class="col-5 minMax inputStyle" placeholder="Maximo" type="text" id="max" name="max">


                        <div class="">
                            <button type="button" class="botonStyle">Continuar</button>
                        </div>
                    </div>
                    <br>

                    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#orderBy">
                        <i class="fas fa-chevron-circle-down"></i> Ordenar por 
                    </button>
                    
                    <div class="collapse" id="orderBy">
                        <div class="collapse col-12 row" id="orderBy">
                            <button class="col-7 botonStyle">Mayor precio</button>
                            <button class="col-7 botonStyle">Menor precio</button>
                            <button class="col-7 botonStyle">Destacados</button>
                        </div>
                    </div>
                </nav>

                

                <div class="pcFilterContainer">
                    <div class="filtrosPC row">

                        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#contenedorDeFiltros">
                            <i class="fas fa-filter"></i>Filtrar
                        </button>

                        <div class="collapse col-12" id="contenedorDeFiltros">
                            <button class="collapseFiltros botonStyle col-2" type="button" data-toggle="collapse" data-target="#collapseFiltro">
                                Categoria
                            </button>
                            <form action="" method="GET" class="collapse col-12" id="collapseFiltro">
                                <button type="submit" name="filtroDeCategoria" value="decoracion" class="col-2 botonStyle botonFiltro">Decoración</button>
                                <button type="submit" name="filtroDeCategoria" value="cocina" class="col-2 botonStyle botonFiltro">Cocina</button>
                                <button type="submit" name="filtroDeCategoria" value="banio" class="col-2 botonStyle botonFiltro">Baño</button>
                                <button type="submit" name="filtroDeCategoria" value="otros" class="col-2 botonStyle botonFiltro">Otros</button>
    
                                <input class="col-4 minMax" placeholder="Minimo" type="text" id="min" name="min">
                                <input class="col-4 minMax" placeholder="Maximo" type="text" id="max" name="max">
                            </form>
                            
                            <div class="col-12"></div>
    
    
                            <button class="collapseFiltros botonStyle col-2" type="button" data-toggle="collapse" data-target="#collapseOrdenar">
                                Ordenar por 
                            </button>
                            <form class="collapse col-12 row" id="collapseOrdenar">
                                <button type="submit" name="ordenar" value="mayor" class="col-2 botonStyle botonFiltro">Mayor precio</button>
                                <button type="submit" name="ordenar" value="menor" class="col-2 botonStyle botonFiltro">Menor precio</button>
                                <button type="submit" name="ordenar" value="destacado" class="col-2 botonStyle botonFiltro">Destacados</button>
                            </form>
                        </div>

                    </div>
                </div>

                <div class="productosDeBusqueda col-12 col-md-12 col-lg-12">
                    <% for(let i = 0; i < productos.length; i++) { %>
                        
                        <div class="producto col-10 col-sm-6 col-lg-4 row">
                            <a href="/product/detail/<%= productos[i].id %>">
                            <div>
                                <img class="col-12" src="/images/productos/<%= productos[i].imagen1 %>" alt="">
                            </div>
                            <div class="productInfo col-12">
                                <h4><%= productos[i].nombreProducto %></h4>

                                <h5 class="product-price"><%= productos[i].precio %></h5>
                                <% if(productos[i].descuento != " "){ %>
                                    <h6 class="product-discount"> <%= productos[i].descuento %> </h6>
                                <% }%>
                            </div>
                            </a>
                        </div>   
                        
                    <% } %>                     
                </div>
            </div>

        </div>
        <%- include('./partials/footer.ejs') %>
    <%- include('./partials/scripts.ejs') %> 
    </body>
</html>
